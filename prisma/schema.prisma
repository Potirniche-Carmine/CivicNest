datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // Set your PostgreSQL URL in .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  image       String
  favoritePet String  // Field for storing "favorite pet"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

